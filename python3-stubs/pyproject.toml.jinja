[build-system]
build-backend = "setuptools.build_meta"
requires = [
  "setuptools>=61.2",
]

[project]
name = "{{ project_name }}"
version = "0.0.1"
description = "{{ project_description }}"
readme = "README.md"
keywords = [
  "{{ project_name }}",
  "ignition",
  "inductive automation",
  "scada",
  "stubs",
]
{%- if project_license != 'None' %}license = { file = "LICENSE" }{% endif %}
authors = [ { name = "{{ author_fullname }}", email = "{{ author_email }}" } ]
requires-python = ">=3.7, <3.13"
classifiers = [
  "Development Status :: {{ project_development_status }}",
  "Intended Audience :: Developers",
  "Intended Audience :: Information Technology",
  "Intended Audience :: Manufacturing",
  {%- if project_license != 'None' %}"License :: OSI Approved :: {{ project_license }}",{% endif %}
  "Operating System :: MacOS :: MacOS X",
  "Operating System :: Microsoft :: Windows",
  "Operating System :: POSIX :: Linux",
  {%- if not upload_registry %}
  "Private :: Do Not Upload",
  {%- endif %}
  "Programming Language :: Python",
  "Programming Language :: Python :: 3 :: Only",
  "Programming Language :: Python :: 3.7",
  "Programming Language :: Python :: 3.8",
  "Programming Language :: Python :: 3.9",
  "Programming Language :: Python :: 3.10",
  "Programming Language :: Python :: 3.11",
  "Programming Language :: Python :: 3.12",
  "Typing :: Stubs Only",
  "Typing :: Typed",
]
dependencies = [
  "ignition-api-stubs",
]
urls.Homepage = "https://github.com/{{ github_org }}/{{ github_repo }}"
urls.Source = "https://github.com/{{ github_org }}/{{ github_repo }}"
urls.Tracker = "https://github.com/{{ github_org }}/{{ github_repo }}/issues"

[tool.setuptools]
include-package-data = true
package-dir = { "" = "stubs" }

[tool.setuptools.package-data]
"*" = [ "*.pyi", "py.typed" ]
